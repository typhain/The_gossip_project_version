<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">New Gossip</h1>
  <p class="lead">Add your own juicy gossip.</p>
</div>

<br>

<div class="container">
  <%= form_tag gossips_path do %>
  <div class="form-group">
    <%= text_field_tag :title, placeholder = "Title", class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= text_area_tag :content, placeholder = "Content", class: 'form-control' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-default btn btn-success' %>
</div>
<% end %>
