<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Login</h1>
</div>

<br>

<div class="container">
  <%= form_tag users_path do %>
  <div class="form-group">
    <%= text_field_tag :city, placeholder = "City", class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= text_field_tag :email, placeholder = "Email", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= text_field_tag :password, placeholder = "Password (minimum of 6 caracters)", class: 'form-control' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-default btn btn-success' %>
</div>
<% end %>
